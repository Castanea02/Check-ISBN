<Window x:Class="ISBN_BookInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISBN Lookup" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter ISBN (13 digits):" Margin="0,0,0,5"/>
            <TextBox x:Name="isbnTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Button Content="Check ISBN" Width="100" Height="30" Click="CheckISBN_Click"/>
        </StackPanel>
    </Grid>
</Window>
